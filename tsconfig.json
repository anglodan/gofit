{
  "compilerOptions": {
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "strict": true,
    "strictPropertyInitialization": false,
    "sourceMap": false,
    "outDir": "./dist",
    "skipLibCheck": true,
    "baseUrl": "./"
  },
  "exclude": [
    "node_modules",
    "migration.ts",
    "src/migrations/*.ts",
    "src/plugins/**/ui/*",
    "**/*.spec.ts",
    "codegen.ts",
    ".admin-ui",
    "dist"
  ],
  "ts-node": {
    "files": true
  }
}
